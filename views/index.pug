html
  head
    title= title
    link(rel='stylesheet',
         href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css',
         integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u',
         crossorigin='anonymous')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js",
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa",
            crossorigin="anonymous")
    script.
      setTimeout(function () {
        location.reload();
      }, 15 * 1000);
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      h1(style="color: white; margin-left: 50px;")= 'Nursaid. Your Health Care AI'
    div.container(style="margin-top:50px;")
      div.navbar-header
        h1!= patient.entry[0].resource.text.div
        h3= 'Gender: ' + patient.entry[0].resource.gender
        br
        h3= 'Birthday: ' + patient.entry[0].resource.birthDate
        br
        h3= 'Contact Info'
          each item in patient.entry[0].resource.telecom
            p= item.system + ': ' + item.value
        br
        h3= 'Address'
          p= patient.entry[0].resource.address[0].city + ' ' + patient.entry[0].resource.address[0].state + ', ' + patient.entry[0].resource.address[0].postalCode
